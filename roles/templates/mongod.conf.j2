# Generated by Ansible
storage:
  dbPath: "{{ item.dbpath }}"
  wiredTiger:
    engineConfig:
      cacheSizeGB: 0.25

systemLog:
  destination: file
  path: "{{ item.logpath }}"
  logAppend: true
  logRotate: rename

processManagement:
  fork: false
  pidFilePath: "{{ item.pidfile }}"

net:
  port: {{ item.port }}
  bindIp: 0.0.0.0
  tls:
    mode: {{ tls_mode }}
    certificateKeyFile: "{{ mount_point }}/serverCert.pem"
    CAFile: "{{ mount_point }}/rootCAcombined.pem"

security:
  authorization: {{ auth }}
  keyFile: "{{ keyfile_path }}"

replication:
  replSetName: "{{ rs_name }}"

setParameter:
  enableLocalhostAuthBypass: {{ 'true' if enable_localhost_bypass else 'false' }}